{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:js-app", "schedule:daily"],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "labels": ["dependencies"],
  "ignoreDeps": ["npm"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["pin", "digest"],
      "automerge": true
    },
    {
      "groupName": "node.js",
      "matchPackageNames": ["node", "@types/node"],
      "automerge": true,
      "extends": ["schedule:monthly"]
    },
    {
      "matchDepTypes": ["dependencies"],
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "groupName": "react",
      "matchPackageNames": ["react", "react-dom", "@types/react"]
    },
    {
      "groupName": "next",
      "matchPackageNames": ["next", "eslint-config-next"],
      "matchPackagePatterns": ["^@next/"]
    },
    {
      "groupName": "theme-ui",
      "matchPackageNames": ["theme-ui"],
      "matchPackagePatterns": ["^@theme-ui/"]
    },
    {
      "groupName": "linters",
      "matchPackagePatterns": ["eslint"],
      "matchPackageNames": ["prettier"]
    },
    {
      "groupName": "@types",
      "matchPackagePrefixes": ["@types/"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": true
  }
}
